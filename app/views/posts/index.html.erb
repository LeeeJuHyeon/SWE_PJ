<div class="container">
    <div class="row">
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <img src="<%= current_user.profile.url %>"/>
                </div>
                <div class="card-content">
                    <div class="card-title">
                        <%= current_user.name %>
                    </div>
                    <p>Email: <%= current_user.email %></p>
                    <p>The number of posts: <%= @posts_count %></p>
                    <p>Follower: <%=current_user.followers.length %></p>
                    <p>Following: <%=current_user.followings.length %></p>
                    
                    <a href="/posts/show"><button class="btn">My Page</button></a>
                    <a href="/users/edit"><button class="btn">Edit Personal Info.</button></a>

                    
                    <%= link_to new_post_path do %>
                        <button class="btn">Write Post</button>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col s12 m8">
            <% @posts.each do |post| %>
                <%= render partial: "post", object: post %>
            <% end %>
        </div>
    </div>
</div>